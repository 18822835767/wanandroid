<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SystemActivity">

    <com.example.sorena.wanandroidapp.widget.SystemBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/systemActivity_BarLayout_bar">
    </com.example.sorena.wanandroidapp.widget.SystemBarLayout>
    
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/systemActivity_BarLayout_bar"
        android:background="@drawable/tab_layout_background"
        app:tabMode="scrollable"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="#ff7a61"
        app:tabTextColor="#ffffff"
        app:tabTextAppearance="@style/MyTab"
        android:id="@+id/systemActivity_tabLayout_showItemName">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/systemActivity_tabLayout_showItemName"
        android:id="@+id/systemActivity_viewPager_showItem">
    </android.support.v4.view.ViewPager>

</RelativeLayout>