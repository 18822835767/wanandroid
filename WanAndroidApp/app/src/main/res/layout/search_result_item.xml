<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/search_LinearLayout_showAuthor">
        
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" 
            android:src="@drawable/ic_author"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:id="@+id/search_textView_showAuthor"
            android:layout_marginLeft="5dp"
            android:text="这是作者"
            android:layout_gravity="center_vertical"
            android:maxLines="1"/>
    </LinearLayout>

    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        >
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchResult_textView_showChapterName"
            android:layout_gravity="center_vertical"
            android:textColor="#1296db"
            android:text="ChapterName"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="/"
            android:textColor="#1296db"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchResult_textView_showSuperChapterName"
            android:textColor="#1296db"
            android:layout_gravity="center_vertical"
            android:text="SuperName"/>

    </LinearLayout>

    <TextView
        android:id="@+id/searchResult_textView_showTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/search_LinearLayout_showAuthor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:layout_marginHorizontal="20dp"
        android:maxLines="2"
        android:minLines="2"
        android:text="这是标题" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_time"
            android:id="@+id/searchResult_imageView_showTime"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是时间"
            android:id="@+id/searchResult_textView_showTime"
            android:layout_toRightOf="@id/searchResult_imageView_showTime"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/searchResult_imageView_showCollect"
        android:src="@drawable/ic_collect_normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        />
</RelativeLayout>