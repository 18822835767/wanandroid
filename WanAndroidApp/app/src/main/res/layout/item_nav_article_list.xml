<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:elevation = "5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这是标题"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/navArticleListItem_textView_item"
            />

        <com.example.sorena.wanandroidapp.widget.FlowLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/navArticleListItem_flowLayout_item"
            android:layout_below="@id/navArticleListItem_textView_item">
        </com.example.sorena.wanandroidapp.widget.FlowLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>