<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pic_head"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/registerFragment_imageView_showPic"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@+id/registerFragment_imageView_showPic"
            android:layout_margin="15dp"
            android:theme="@style/MyEditText"
            android:id="@+id/registerFragment_editText_userNameInput"
            android:hint="用户名"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@+id/registerFragment_editText_userNameInput"
            android:layout_margin="15dp"
            android:theme="@style/MyEditText"
            android:id="@+id/registerFragment_editText_userPasswordInput"
            android:inputType="textPassword"
            android:hint="密码"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@+id/registerFragment_editText_userPasswordInput"
            android:layout_margin="15dp"
            android:theme="@style/MyEditText"
            android:id="@+id/registerFragment_editText_userPasswordConfine"
            android:inputType="textPassword"
            android:hint="确认密码"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#17abe3"
            android:layout_marginHorizontal="50dp"
            android:layout_below="@id/registerFragment_editText_userPasswordConfine"
            android:id="@+id/registerFragment_button_register"
            android:text="注册"
            android:theme="@style/MyEditText"
            android:textColor="#ffffff"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已有账号?前去登录"
            android:layout_below="@id/registerFragment_button_register"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_marginVertical="20dp"
            android:id="@+id/registerFragment_textView_goToLogin"
            />
    </RelativeLayout>


</RelativeLayout>