<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/refreshLayout_textView_showError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="哦豁,由于对不上电波,加载失败了"
            android:textColor="#515151"
            android:textSize="17dp" />

        <Button
            android:id="@+id/refreshLayout_button_refresh"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/refreshLayout_textView_showError"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/refresh_button_shape"
            android:text="重新加载"
            android:textColor="#17abe3" />
    </RelativeLayout>

</RelativeLayout>